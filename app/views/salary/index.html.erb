<center>
	<h1>All Purchases</h1>

	<%= link_to 'New Expense', new_salary_path %>

	<br>
	<br>

	<table>
		<tr>
			<th>Amount</th>
			<th>Purchase</th>
		</tr>
		<% for a in @salary do %>
		<tr>
			<td><%= a.amount %></td>
			<td><%= a.purchase %></td>
			<td><%= link_to 'View', salary_path(a) %></td>
			<td><%= link_to 'Edit', edit_salary_path(a) %></td>
		</tr>
		<% end %>
	</table>
</center>